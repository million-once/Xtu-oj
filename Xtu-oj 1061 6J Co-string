#include <stdio.h>
#include <string.h>

// 检查从start开始，长度为2n的子串是否是co-string
int isCoString(char *str, int start, int n) {
    for (int i = 0; i < n; i++) {
        if (str[start + i] != str[start + n + i]) {
            return 0;
        }
    }
    return 1;
}

int main() {
    int K;
    char str[1001];
    
    scanf("%d", &K);
    while (K--) {
        scanf("%s", str);
        int len = strlen(str);
        int max_len = 0;
        
        // 遍历所有可能的子串起始位置
        for (int i = 0; i < len; i++) {
            // 遍历所有可能的n值（子串长度的一半）
            // n最大为 (len-i)/2，因为需要2n的长度
            for (int n = 1; n <= (len - i) / 2; n++) {
                // 检查从i开始，长度为2n的子串是否是co-string
                if (isCoString(str, i, n)) {
                    // 如果是，更新最大长度
                    if (2 * n > max_len) {
                        max_len = 2 * n;
                    }
                }
            }
        }
        
        printf("%d\n", max_len);
    }
    
    return 0;
}
